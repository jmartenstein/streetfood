%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}

	%head
		%title #{@page_text['title']}, #{@page_text['sub-title']} 
		%link{:rel => "stylesheet", :href => "#{@base_url}/stylesheet.css", :type => "text/css"}

	%body
		=haml :header, :layout => false
		
		.info
			%strong.title Neighborhoods

		.main
			%ul.neighborhoods
				- Neighborhood.all.each do |hood|
					%li.neighborhood
						%a{ :href=>"#{@base_url}/neighborhood/#{hood.name}" }= hood.name

				%br
				%li 
					%a{ :href=>"#{@base_url}/trucks" } browse by truck

		=haml :footer, :layout => false
