%head
	%title Seattle Food Trucks
	%link{:rel => "stylesheet", :href => "../stylesheet.css", :type => "text/css"}

%body
	.header Seattle Food Trucks
	%br

	.main

		- # grab the truck and stop information here 
		- truck = Truck.where('name like ?', @name).first
		- # stops = Stop.where('truck_name like ?', @name)

		/ display information about the truck
		%a{ :href => "#{truck.website}" } #{truck.name}
		/ # p truck.truck_name
		%br
		%br

		/ display information about the trucks upcoming stops
		- (0 .. 3).each do |i|
			.day
				- day = Date.today + i
				.date #{day}
				- day_stops = truck.stops.by_date(day)
				- if (!day_stops.empty?)
					- day_stops.each do |stop|
						.stop
							%a{ :href => "../neighborhood/#{stop.location.neighborhood.name}" }> 
								#{stop.location.neighborhood.name}
							, #{stop.location.name}, #{stop.hours}
				- else
					.no_stop No trucks today

